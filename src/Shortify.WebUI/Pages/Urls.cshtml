@page
@model UrlsModel
@{
    ViewData["Title"] = "Urls";
}

<style>
    .date {
        position: relative;
    }

    .date:hover::after {
        content: attr(title);
        position: absolute;
        background-color: #fff;
        border: 1px solid #ccc;
        padding: 2px 5px;
        white-space: nowrap;
        z-index: 10;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
    }
</style>

<h1>Shortened URLs</h1>

@if (Model.PagedResult != null && Model.PagedResult.Items.Any())
{
    <table class="table">
        <thead>
        <tr>
            <th>Original URL</th>
            <th>Shortened URL</th>
            <th>Visits</th>
            @if (User.Claims.FirstOrDefault(c => c.Type == "role")?.Value == "admin")
            {
                <th>Created by</th>
            }
            <th>Created at</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var url in Model.PagedResult.Items)
        {
            <tr>
                <td>@url.OriginalLink</td>
                <td>@url.ShortLink</td>
                <td>@url.Visits</td>
                @if (User.Claims.FirstOrDefault(c => c.Type == "role")?.Value == "admin")
                {
                    <td>@url.UserMail</td>
                }
                <td>
                    <div class="date" title="@url.CreatedAt.ToLocalTime().ToString("HH:mm:ss")">
                        @url.CreatedAt.ToLocalTime().ToString("dd.MM.yy")
                    </div>
                </td>
                <td>
                    <form method="post" asp-page-handler="Delete">
                        <input type="hidden" name="id" value="@url.Id"/>
                        <button type="submit" class="btn btn-danger">üóëÔ∏è</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No URLs found.</p>
}